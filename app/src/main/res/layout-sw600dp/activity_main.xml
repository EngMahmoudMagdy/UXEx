<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.magdy.uiex.MainActivity"
    android:background="#343d46"
    >
    <!-- android:background="#343d46"-->




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">



        <ImageView
            android:id="@+id/triup"
            android:gravity="center"
            android:background="@drawable/trangleup"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:layout_width="550dp"
            android:layout_height="550dp" />

        <ImageView
            android:layout_width="550dp"
            android:layout_height="230dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/triupclick"
            android:gravity="center"
            android:src="@drawable/iconabout"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="155dp"



            />
        <ImageView
            android:layout_width="550dp"
            android:layout_height="550dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/tridown"
            android:background="@drawable/trangledown"
            android:layout_marginTop="465dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            />
        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="550dp"
            android:layout_height="220dp"
            android:addStatesFromChildren="true"
            android:scaleType="center"
            android:layout_marginTop="600dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="2dp"

            >
            <ImageView
                android:layout_width="550dp"
                android:layout_height="220dp"
                android:scaleType="center"
                android:adjustViewBounds="true"
                android:id="@+id/tridownclick"
                android:clickable="true"

                />
            <ImageView
                android:layout_width="550dp"
                android:layout_height="220dp"
                android:scaleType="center"
                android:adjustViewBounds="true"
                android:rotationY="180"
                android:id="@+id/tridownclick1"

                android:src="@drawable/iconmessage"
                android:clickable="true"

                />

        </ViewFlipper>

        <ImageView
            android:layout_width="550dp"
            android:layout_height="550dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/trileftup"
            android:background="@drawable/trangleleftup"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="68dp"
            android:layout_marginRight="210dp"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trileftupcilck"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="320dp"
            android:layout_marginRight="178dp"


            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="350dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trileftupcilck2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:layout_marginRight="230dp"


            />
        <ImageView
            android:layout_width="550dp"
            android:layout_height="550dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/trileftdown"
            android:background="@drawable/trangleleftdown"
            android:layout_marginTop="418dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginRight="205dp"


            />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trileftdownclick"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="518dp"
            android:layout_marginRight="156dp"
            android:gravity="center"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textColor="#FFF"
                android:textSize="35sp"
                android:id="@+id/textleftdown"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88"
                android:textColor="#fff"
                android:textSize="35sp"
                android:id="@+id/textnumberleftdown"/>
            </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="275dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trileftdownclick2"
            android:layout_marginTop="508dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="216dp"




            />

        <ImageView
            android:layout_width="550dp"
            android:layout_height="550dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/trirightup"
            android:background="@drawable/tranglerightup"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62dp"
            android:layout_marginLeft="225dp"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trirightupclick"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="174dp"


            />
        <ImageView
            android:layout_width="110dp"
            android:layout_height="235dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trirightupclick2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="265dp"
            android:layout_marginLeft="205dp"

            />
        <ImageView
            android:layout_width="550dp"
            android:layout_height="550dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/trirightdown"
            android:background="@drawable/tranglerightdown"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="418dp"
            android:layout_marginLeft="220dp"

            />
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trirightdownclick"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="518dp"
            android:layout_marginLeft="170dp"
            android:gravity="center"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textColor="#FFF"
                android:textSize="35sp"
                android:id="@+id/textrightdown"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88"
                android:textColor="#fff"
                android:textSize="35sp"
                android:id="@+id/textnumberrightdown"/>
            </LinearLayout>
        <ImageView
            android:layout_width="130dp"
            android:layout_height="245dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trirightdownclick2"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="518dp"
            android:layout_marginLeft="215dp"





            />

        <ImageView
            android:layout_width="270dp"
            android:layout_height="255dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/circleid"
            android:src="@drawable/defaultcircle"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="379dp"
            android:layout_marginLeft="2dp"

            />


    </FrameLayout>


    <include
        layout="@layout/toolbar" >
    </include>


</RelativeLayout>

   <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#464646"
        app:menu="@menu/drawer_view"
        app:itemIconTint="@color/drawer_item"
        app:itemTextColor="@color/drawer_item"
        />



</android.support.v4.widget.DrawerLayout>