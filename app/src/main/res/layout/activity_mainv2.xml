<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.magdy.uiex.MainActivity"
    android:background="#343d46"
    >




    <include
        layout="@layout/toolbar" >
    </include>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">



        <ImageView
            android:id="@+id/triup"
            android:gravity="center"
            android:background="@drawable/trangleup"
            android:layout_gravity="center_horizontal"
            android:layout_width="275dp"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:layout_height="275dp" />


        <ImageView
            android:layout_width="170dp"
            android:layout_height="130dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
        android:id="@+id/triupclick"
        android:gravity="center"
        android:src="@drawable/iconabout"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"



        />



        <ImageView
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/tridown"
            android:background="@drawable/trangledown"
            android:layout_marginTop="230dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            />
        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="185dp"
            android:layout_height="160dp"
            android:addStatesFromChildren="true"
            android:scaleType="center"
            android:layout_marginTop="285dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="7dp"


        >
            <ImageView
                android:layout_width="185dp"
                android:layout_height="160dp"
                android:scaleType="center"
                android:adjustViewBounds="true"
                android:id="@+id/tridownclick"
                android:clickable="true"

                />
            <ImageView
                android:layout_width="185dp"
                android:layout_height="160dp"
                android:scaleType="center"
                android:adjustViewBounds="true"
                android:rotationY="180"
                android:id="@+id/tridownclick1"

                android:src="@drawable/iconmessage"
                android:clickable="true"

                />

        </ViewFlipper>

        <ImageView

            android:layout_width="275dp"
            android:layout_height="275dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/trileftup"
            android:background="@drawable/trangleleftup"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginRight="105dp"


            />
        <ImageView


            android:layout_width="130dp"
            android:layout_height="100dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trileftupcilck"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:layout_marginRight="99dp"




            />
        <ImageView

            android:layout_width="80dp"
            android:layout_height="180dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trileftupcilck2"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="72dp"
            android:layout_marginRight="138dp"


            />
        <!--android:background="#fff"-->
        <ImageView
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/trileftdown"
            android:background="@drawable/trangleleftdown"
            android:layout_marginTop="205dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginRight="102dp"




            />

        <ImageView

            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trileftdownclick2"
            android:layout_marginTop="305dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginRight="136dp"




            />
        <LinearLayout

            android:layout_width="110dp"
            android:layout_height="100dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trileftdownclick"
            android:layout_marginTop="255dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginRight="102dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:id="@+id/textleftdown"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88"
                android:textColor="#fff"
                android:textSize="25sp"
                android:id="@+id/textnumberleftdown"/>
        </LinearLayout>

        <ImageView
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/trirightup"
            android:background="@drawable/tranglerightup"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="113dp"
            />
        <ImageView
            android:layout_width="100dp"

            android:layout_height="100dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trirightupclick"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="90dp"

            />

        <ImageView

            android:layout_width="80dp"
            android:layout_height="180dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trirightupclick2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="134dp"

            />


        <ImageView
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/trirightdown"
            android:background="@drawable/tranglerightdown"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="205dp"
            android:layout_marginLeft="110dp"

            />
        <LinearLayout

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trirightdownclick"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="255dp"
            android:layout_marginLeft="90dp"

            android:gravity="center"
            android:orientation="vertical"




            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:id="@+id/textrightdown"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="88"
            android:textColor="#fff"
            android:textSize="25sp"
            android:id="@+id/textnumberrightdown"/>
        </LinearLayout>

        <ImageView


            android:layout_width="80dp"
            android:layout_height="180dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:id="@+id/trirightdownclick2"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="130dp"


            />

       <ImageView

            android:layout_width="135dp"
            android:layout_height="125dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/circleid"
            android:src="@drawable/defaultcircle"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="189dp"
           android:layout_marginLeft="2dp"

            />


    </FrameLayout>


</RelativeLayout>
  <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#464646"
        app:menu="@menu/drawer_view"
        app:itemIconTint="@color/drawer_item"
        app:itemTextColor="@color/drawer_item"
        />

</android.support.v4.widget.DrawerLayout>